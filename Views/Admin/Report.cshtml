@model IEnumerable<Furniture.Models.ProductOrder>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
   
    var q = Model.Count();


}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Report</title>
</head>
<body>
<div class="container" style="margin-top:40px">
    <div class="row">
        <div class="col-6">
<form asp-action="Search" method="post">

    <input type="date" class="form-control"  name="startDate" placeholder="Start Date"/>

    <input type="date" class="form-control"  name="endDate" placeholder="End Date"/>

    <input type="submit" value="search" class="btn btn-primary" />

</form>
        </div>
    </div>


                      <div class="container" style="margin-top:40px;">
                                    <div class="card">
                            <div class="card-body">
                                <div class="card-title">
                                    <h4>Sales Report</h4>
                                </div>
                                <div class="table-responsive">
                                    <table  class="display nowrap" id="example">
                                           <thead>
        <tr>
            <th>
                Product Name
            </th>
            <th>
                Type
            </th>
            <th>
                Price
            </th>
            <th>
                Customer name
            </th>
            <th>
                Created date
            </th>
        </tr>
    </thead>
                                        <tbody>
                                @foreach (var item in Model)
                                {
                        <tr>
                            <td>
                                            @Html.DisplayFor(modelItem => item.Product.ProductName)
                            </td>
                            <td>
                                            @Html.DisplayFor(model=> item.Product.Category.Categoryname);
                            </td>
                                <td>
                                            @Html.DisplayFor(model=> item.Product.Price)
                                </td>
                                     <td>
                                            @Html.DisplayFor(model=> item.Order.User.Fullname)
                                    </td>
                                    <td>
                                            @Html.DisplayFor(model=> item.Order.CreatedDate)

                                    </td>

                        </tr>
                                }
                                        </tbody>
                                        <tfoot>
                                                <tr>
                                                    <td>Total sales : @ViewBag.Amount</td>

                                                </tr>
                                                <tr>
                                                      <td>@q</td>
                                                </tr>
                                        </tfoot>
                                    </table>
                                </div>
                            </div>
                        </div>

                    </div>

    </div>

</body>
</html>



