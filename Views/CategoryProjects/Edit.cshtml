@model Furniture.Models.CategoryProject

@{
    ViewData["Title"] = "Edit";
}


 <div class="container" style="margin-top:40px">
              <div class="row justify-content-center">
                        <div class="col-lg-12">
                            <div class="card">
                                <div class="card-body">
                                    <div class="form-validation">
                                           <form asp-action="Create" enctype="multipart/form-data">
                                            <div class="form-group row">
                                                    <label asp-for="Categoryname" class="col-lg-4 col-form-label" for="val-username">
                                                </label>
                                                <div class="col-lg-6">
                                                        <input asp-for="Categoryname" class="form-control" >
                                                              <span asp-validation-for="Categoryname" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                    <label asp-for="ImageFile"  class="col-lg-4 col-form-label" for="val-email">
                                                </label>
                                                <div class="col-lg-6">
                                                        <input asp-for="ImageFile"  class="form-control" id="image" >
                                                         <span asp-validation-for="ImageFile" class="text-danger"></span>
                                                </div>
                                            </div>


                                            <div class="form-group row">
                                                <div class="col-lg-8 ml-auto">

                                                    <button type="submit" class="btn btn-primary" id="save">Submit</button>
                                                </div>
                                            </div>
                                        </form>
                                                   <a asp-action="Index">Back to List</a>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
