@model Furniture.Models.CategoryProject

@{
    ViewData["Title"] = "Delete";
}




<div class="container" style="margin-top:40px">
    <h3>Are you sure you want to delete this?</h3>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Categoryname)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Categoryname)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ImagePath)
        </dt>
        <dd class = "col-sm-10">
             <img src=@Url.Content("~/image/" + Model.ImagePath)
                        asp-append-version="true" style="border-radius:20%;" width="100" height="100" />
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger m-b-10 m-l-5" id="toastr-success-bottom-center" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
