@model Furniture.Models.ProductProject

@{
    ViewData["Title"] = "Edit";
}
       
    <div class="container" style="margin-top:40px">
                    <div class="row justify-content-center">
                        <div class="col-lg-12">
                            <div class="card">
                                <div class="card-body">
                                    <div class="form-validation">
                                           <form asp-action="Create" enctype="multipart/form-data">
                                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                            <input type="hidden" asp-for="Id" />

                                            <div class="form-group row">
                                                    <label asp-for="ProductName" class="col-lg-4 col-form-label" for="val-username">
                                                </label>
                                                <div class="col-lg-6">
                                                        <input asp-for="ProductName" class="form-control" >
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                    <label asp-for="Price"  class="col-lg-4 col-form-label" for="val-email">
                                                </label>
                                                <div class="col-lg-6">
                                                        <input asp-for="Price"  class="form-control" >
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                    <label asp-for="Valuee"  class="col-lg-4 col-form-label">
                                                </label>
                                                <div class="col-lg-6">
                                                            <input asp-for="Valuee" class="form-control"/>
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                    <label asp-for="CategoryId" class="col-lg-4 col-form-label">
                                                      </label>
                                                <div class="col-lg-6">
                                                         <select asp-for="CategoryId" class ="form-control" asp-items="ViewBag.CategoryId"></select>
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                    <label asp-for="ImageFile" class="col-lg-4 col-form-label">
                                                </label>
                                                <div class="col-lg-6">
                                                     <input asp-for="ImageFile" class="form-control"  accept="Image/*"/>
                                                        <span asp-validation-for="ImageFile" class="text-danger"></span>                                                </div>
                                            </div>

                                            <div class="form-group row">
                                                <div class="col-lg-8 ml-auto">
                                                    <button type="submit" class="btn btn-primary">Submit</button>
                                                </div>
                                            </div>
                                        </form>
                                                   <a asp-action="Index">Back to List</a>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }


