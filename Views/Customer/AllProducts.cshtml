<div class="container" style="margin-top:40px;">
        <form  asp-controller="Customer" asp-action="AllProducts" method="get" >
            <div class="form-group">
                           <input type="text" asp-for="SearchString"   class ="form-control" style="width:200px; border:none; border-radius:40px;" placeholder="Search"/>

            </div>
            <div class="form-group">
                   <input type="submit" value="Search"  class="btn btn-primary" />

            </div>
        </form>
</div>


 <section>
  <div class="text-center container py-5">


    <div class="row">
                @foreach (var item in Model.products!) {
                            <div class="col-lg-4 col-md-12 mb-4" data-aos="fade-right">
        <div class="card">
          <div class="bg-image hover-zoom ripple ripple-surface ripple-surface-light"
            data-mdb-ripple-color="light">
                <img src=@Url.Content("~/image/" + item.ImagePath) alt=""  asp-append-version="true" width="200" height="300" class="w-100" />
            <a href="#!">
              <div class="mask">
                <div class="d-flex justify-content-start align-items-end h-100">
                  <h5><span class="badge bg-primary ms-2">New</span></h5>
                </div>
              </div>
              <div class="hover-overlay">
                <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
              </div>
            </a>
          </div>
          <div class="card-body">
            <a href="" class="text-reset">
              <h5 class="card-title mb-3">@Html.DisplayFor(modelItem => item.ProductName)</h5>
            </a>
            <a href="" class="text-reset">
                  <p>@Html.DisplayFor(modelItem => item.Category.Categoryname)</p>
            </a>
                <h6 class="mb-3">$@Html.DisplayFor(modelItem => item.Price)</h6>
                  <a asp-action="Shopping" asp-controller="Customer" asp-route-id="@item.Id" class="btn mb-1 btn-primary">Add to cart <i class="bi bi-cart4"></i></a>
          </div>
        </div>
      </div>
                }
     


    </div>


  </div>
</section>





    

