}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ShowProfile</title>
 
</head>
<body>

    <div class="container px-4 mt-4">
 
    <div class="row">
        <div class="col-xl-4">
            <!-- Profile picture card-->
            <div class="card mb-4 mb-xl-0">
                <div class="card-header">Profile Picture</div>
                <div class="card-body text-center">
                    <!-- Profile picture image-->
                    <img class="img-account-profile rounded-circle mb-2" src=@Url.Content("~/image/" + Model.ImagePath) alt="" asp-append-version="true" width="100" height="100">
                    <!-- Profile picture help block-->
                    <div class="small font-italic text-muted mb-4">JPG or PNG no larger than 5 MB</div>
                    <!-- Profile picture upload button-->
@*                    <button class="btn btn-primary" type="button">Upload new image</button>
*@                </div>
            </div>
        </div>
        <div class="col-xl-8">
            <!-- Account details card-->
            <div class="card mb-4">
                <div class="card-header">Account Details</div>
                <div class="card-body">

                        <!-- Form Group (username)-->
                        <div class="mb-3">
                            <label asp-for="Fullname" class="control-label" ></label>
                            <input asp-for="Fullname" class="form-control" disabled />
                        </div>
                        <!-- Form Row-->
                        <div class="row gx-3 mb-3">
                            <!-- Form Group (first name)-->
                            <div class="col-md-6">
                                 <label asp-for="Email"  class="control-label"></label>
                                 <input asp-for="Email"class="form-control" disabled />
                            </div>
                            <!-- Form Group (last name)-->
                            <div class="col-md-6">
                                  <label asp-for="Phone"  class="control-label"></label>
                                  <input asp-for="Phone"class="form-control" disabled />
                            </div>
                        </div>
                        <!-- Form Row        -->
                        <div class="row gx-3 mb-3">
                            <!-- Form Group (organization name)-->
                            <div class="col-md-6">
                               <label  class="control-label">User name</label>
                                  <input type="text" class="form-control" disabled  value="@Model.Logins.SingleOrDefault().Username"/>
                            </div>
                            <!-- Form Group (location)-->
                            <div class="col-md-6">
                               <label  class="control-label">Password</label>
                                  <input  class="form-control" value="@Model.Logins.SingleOrDefault().Passwordd" disabled type="password" />
                            </div>
                        </div>
                        
                        <!-- Save changes button-->
                          <a asp-action="EditProfile" class="btn btn-primary">Edit Your Information</a> 
           
   
                </div>
            </div>
        </div>
    </div>
</div>


